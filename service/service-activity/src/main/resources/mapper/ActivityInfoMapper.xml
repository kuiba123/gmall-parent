<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.atguigu.gmall.activity.mapper.ActivityInfoMapper">

    <select id="selectExistSkuIdList" resultType="java.lang.Long">
       select
            sku.sku_id
       from gmall_activity.activity_info info
       inner join gmall_activity.activity_sku sku on info.id = sku.activity_id
       <where>
           <if test="skuIdList!=null">
               and sku.sku_id in
               <foreach collection="skuIdList" item="item" open="(" separator="," close=")">
                    #{item}
               </foreach>
           </if>
           and now() between info.start_time and info.end_time
       </where>
    </select>
</mapper>